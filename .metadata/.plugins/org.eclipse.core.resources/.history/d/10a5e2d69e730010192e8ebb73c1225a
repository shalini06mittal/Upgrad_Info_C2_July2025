package threads;

public class MessageDecorator {

	private StringBuffer buffer = new StringBuffer();
	
	
	public StringBuffer getBuffer() {
		return buffer;
	}


	public void decorate(String name) {
		
		buffer.append("*** ");
		buffer.append(name);
		try {
			Thread.sleep(500);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		buffer.append(" ###\n");
	}
}

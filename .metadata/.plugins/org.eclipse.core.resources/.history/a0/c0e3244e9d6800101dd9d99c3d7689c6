package interfaces;

class BubbleSort implements Sortable{
	@Override
	public void sort(int ...a) {
		
		System.out.println("Bubble sort logic");
	}
}
public class TestSortable {

	public static void main(String[] args) {
		
		Sortable ob = new BubbleSort();
		
		ob.sort(100,12,3,40);
		
		// anonymous inner class
		ob = new Sortable(){
			@Override
			public void sort(int ...a) {
				
				System.out.println("Insertion sort logic");
			}
		};
		ob.sort(3,2,5,7,3,2);
		
		ob = new Sortable(){
			@Override
			public void sort(int ...a) {
				
				System.out.println("heap sort logic");
			}
		};
		ob.sort(3,2,5,7,3,2);
		
		// lambda expressions
		/**
		 * 1. Input (parameters)
		 * 2. Business Logic (body {} )
		 * 3. Output (return type)
		 * 
		 * (parameters) -> {body and return}
		 */
		ob = (arr) ->{
			System.out.println("Tree sort");
		};
		ob = arr -> System.out.println("Tree sort");
	}

}

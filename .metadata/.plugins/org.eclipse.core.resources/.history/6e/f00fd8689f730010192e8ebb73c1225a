package threads;

public class DecorateThread extends Thread{

	MessageDecorator decorator;
	String username;
	
	public DecorateThread(String threadName,
			MessageDecorator decorator,
			String userName) {
		super(threadName);
		this.decorator = decorator;
		this.username = userName;
		start();
	}
	@Override
	public void run() {
		decorator.decorate(username);
	}
	public static void main(String[] args) throws InterruptedException {
		// TODO Auto-generated method stub

		MessageDecorator ob1 = new MessageDecorator();
		MessageDecorator ob2 = new MessageDecorator();
		
		DecorateThread t1 = new DecorateThread("D1", ob1,"Shalini");
		DecorateThread t2 = new DecorateThread("D2", ob2,"Chirag");
		
		t1.join();
		t2.join();
		System.out.println("1 "+ob1.getBuffer());
		System.out.println("2 "+ob2.getBuffer());
		System.out.println("main ends");
	}

}

package exceptions;

public class ExceptionHandlingDemo {

	// showcases unchecked excpeption
	public static void calculate(int no) {
		if(no<=0)
		{
			// manually throwing an exception
			throw new RuntimeException("cannot calculate square root");
		}
		//else {
			System.out.println(Math.sqrt(no));
		//}
	}
	// showcases checked excpeption
	public static void divide(int no) {
		try
		{
			System.out.println(10/no);
			
		}catch(Exception e) {
			throw new Exception("no cannot be 0");
		}
		
		
	}
	public static void main(String[] args) throws InterruptedException {
		
		calculate(10);
		try {
		calculate(0);
		}catch(RuntimeException e) {
			System.out.println(e.getLocalizedMessage());
		}
		calculate(16);
		
//		System.out.println("starting");
